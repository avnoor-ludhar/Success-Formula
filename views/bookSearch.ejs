<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Success Formula</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/styles/styles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lato:wght@700&display=swap" rel="stylesheet">

    </head>
    <body>
        <header>
            <div class="frame">
                <div class="center">
                    <div class="sky"></div>
                    <div class="sun"></div>
                    <div class="sand"></div>
                    <div class="left-triangle"></div>
                    <div class="right-triangle"></div>
                    <div class="shadow"></div>
                </div>
            </div>
            <div class="flexbox">
                <div class="flex-item">
                    <a href="/">
                        <div class="button">
                            <img src="images/home-icon-silhouette-svgrepo-com.svg" class="create-image home-svg"/>
                            <div class="flexText"><a href="/">Home</a></div>
                        </div>
                    </a>
                </div>
                <div class="flex-item">
                    <a href="/searchBook">
                        <div class="button">
                            <img src="images/book-svgrepo-com.svg" class="create-image"/>
                            <div class="flexText"><a href="/searchBook">Book Search</a></div>
                        </div>
                    </a>
                </div>

                <div class="flex-item">
                    <a href="/create">
                        <div class="button">
                            <img src="images/goal-svgrepo-com.svg" class="create-image"/>
                            <div class="flexText"><a href="/create">Create</a></div>
                        </div>
                    </a>
                </div>
        
                <div class="flex-item">
                    <a href="/schedule">
                        <div class="button">
                            <img src="images/calander.svg" class="quoteImage"/>
                            <div class="flexText"><a href="/schedule">Schedule</a></div>
                        </div>
                    </a>
                </div>

                <div class="flex-item">
                    <a href="/books">
                        <div class="button">
                            <img src="images/books.svg" id="books" class="create-image"/>
                            <div class="flexText"><a href="/books">Books</a></div>
                        </div>
                    </a>
                </div>
            </div>
            <hr class="header-divider"/>
        </header>
        <main>
            <div class="flex">
                <div class="bookSearchDiv flex">
                    <form action="/searchBook" method="post">
                        <div class="flex">
                            <input class="bookSearchField" type="text" name="book" placeholder="Search your book!" autocomplete="off">
                            <button class="bookSearchButton"type="submit" class="centerSearch"><img src="/images/search-book-svgrepo-com.svg"/></button>
                        </div>   
                        
                    </form>
                </div>
            </div>
            
            <% if(books.length != 0) { %>
                <div class="flexBookSearch">
                    <form method="post" action="/books">
                        <% books.forEach((book, idx)=>{ %>
                            <button type="submit">
                                <% if(typeof book.volumeInfo.imageLinks == 'undefined'){ %>
                                    <div>
                                        <h2><%= book.volumeInfo.title %></h2>
                                        <img src=""
                                    </div>
                                    
                                <% } else{ %>
                                   <img src="<%= book.volumeInfo.imageLinks.thumbnail %>"/>
                                   
                                <% } %>
                                
                            </button>
                        <% }); %>
                    </form>
                </div>
            <% } %>
        </main>
<%- include("partials/footer.ejs") %>