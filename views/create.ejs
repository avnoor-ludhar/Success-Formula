    <body>
        <header>
            <div class="frame">
                <div class="center">
                    <div class="sky"></div>
                    <div class="sun"></div>
                    <div class="sand"></div>
                    <div class="left-triangle"></div>
                    <div class="right-triangle"></div>
                    <div class="shadow"></div>
                </div>
            </div>
            <div class="flexbox my-4">
                <div class="flex-item">
                        <div class="button flex">
                            <img src="images/home-icon-silhouette-svgrepo-com.svg" class="create-image home-svg"/>
                            <div class="flexText"><a href="/" class="extraBootstrap">Home</a></div>
                        </div>
                </div>
                    
               
                <div class="flex-item">
                        <div class="button flex">
                            <img src="images/book-svgrepo-com.svg" class="create-image"/>
                            <div class="flexText"><a href="/searchBook" class="extraBootstrap">Book Search</a></div>
                        </div>
                </div>
                
                <div class="flex-item">
                        <div class="button flex">
                            <img src="images/goal-svgrepo-com.svg" class="create-image"/>
                            <div class="flexText"><a href="/create" class="extraBootstrap">Create</a></div>
                        </div>
                </div>
                
                <div class="flex-item">
                        <div class="button flex">
                            <img src="images/books.svg" id="books" class="create-image"/>
                            <div class="flexText"><a href="/books" class="extraBootstrap">Books</a></div>
                        </div>
                </div>
            </div>
            <hr class="bootstrapHeader mb-5 mt-5"/> 
        </header>
        <main>
            <div class="createSchedule">
                <div class="createScheduleItem">
                    <h1 class="flex">
                        <%= dayOfWeek %>
                    </h1>
                    <ul class="list-group schedule">
                        <form action="/create" method="post">
                            <% tasks.forEach((task)=>{ %>
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold"><%= task.startTime %> - <%= task.endTime %></div>
                                    <%= task.description %>
                                </div>
                                <input type="hidden" name="contentType" value="<%="remItem"%>"/>
                                <button type="submit" name="delSchedID" value="<%= task._id %>" class="btn btn-dark mt-3 mx-2">del</button>
                            <% }); %>
                        </form>
                    </ul>
                    <form action="/create/home" method="post" class="flex mt-5">
                        <button type="submit" class="btn btn-outline-dark">Create</button>
                    </form>
                </div>
                <div class="createScheduleItem">
                    <h1 class="flex">Add Task</h1>
                    <form action="/create" method="POST" class="my-3 mx-5">
                        <div class="form-group">
                            <label class="form-label">Start time</label>
                            <input type="time" class="form-control" name="startTime">
                            <label class="form-label">End time</label>
                            <input type="time" class="form-control" name="endTime">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="taskDescription" rows="3"></textarea>
                            <input type="hidden" name="contentType" value="<%= "addItem" %>"/>
                        </div>
                        <button type="submit" name="button" class="btn btn-outline-dark mt-2">Add Item</button>
                    </form>
                </div>
            </div>
        </main> 
        
